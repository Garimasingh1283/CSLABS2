import java.util.Scanner;
public class DetailsS {

    public static class StudentReport {
        public static void main(String[] args) {
            Scanner scanner = new Scanner(System.in);

            // Input student's roll number
            System.out.print("Enter Student's Roll Number: ");
            int rollNumber = scanner.nextInt();

            // Input the number of subjects
            System.out.print("Enter the number of subjects: ");
            int numSubjects = scanner.nextInt();

            // Arrays to store subject names, credits, and marks
            String[] subjects = new String[numSubjects];
            int[] credits = new int[numSubjects];
            double[] marks = new double[numSubjects];

            // Input details for each subject
            for (int i = 0; i < numSubjects; i++) {
                scanner.nextLine(); // Consume newline
                System.out.print("Enter Subject " + (i + 1) + " Name: ");
                subjects[i] = scanner.nextLine();

                System.out.print("Enter Subject " + (i + 1) + " Credits: ");
                credits[i] = scanner.nextInt();

                System.out.print("Enter Marks for Subject " + (i + 1) + ": ");
                marks[i] = scanner.nextDouble();
            }

            // Close the scanner
            scanner.close();

            // Calculate GPA (Grade Point Average)
            double totalPoints = 0;
            int totalCredits = 0;

            for (int i = 0; i < numSubjects; i++) {
                totalPoints += (marks[i] * credits[i]);
                totalCredits += credits[i];
            }

            double gpa =  (totalPoints / totalCredits);

            // Display the student's report
            System.out.println("\nStudent Report:");
            System.out.println("Roll Number: " + rollNumber);
            System.out.println("Subjects\tCredits\t\tMarks");
            for (int i = 0; i < numSubjects; i++) {
                System.out.println(subjects[i] + "\t\t" + credits[i] + "\t\t" + marks[i]);
            }
            System.out.println("GPA: " + gpa);
        }
    }

}
